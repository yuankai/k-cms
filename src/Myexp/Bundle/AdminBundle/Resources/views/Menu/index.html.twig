{% extends 'MyexpAdminBundle::base.html.twig' %}
{% block title %}{{ 'menu.list'|trans }}{{ parent() }}{% endblock %}
{% block breadcrumd %}
    <li class="active">{{ 'menu.manage'|trans }}</li>
{% endblock %}
{% block content %}
 <div class="row">

        <div class="col-xs-12">

            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Hover Data Table</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>{{ 'menu.id'|trans }}</th>
                <th>{{ 'menu.name'|trans }}</th>
                <th>{{ 'menu.title'|trans }}</th>
                <th>{{ 'common.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in pagination %}
            <tr class="{{ cycle(['odd', 'even'], loop.index) }}">
                <td>{{ entity.id }}</td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.title }}</td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-default" href="{{ path('admin_menu_edit', { 'id': entity.id }) }}" title="{{ 'common.edit'|trans }}">
                            <i class="fa fa-edit"></i>
                        </a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <th colspan="8">
                    <a class="btn btn-primary" href="{{ path('admin_menu_new') }}">
                        <i class="sidebar icon"></i> {{ 'menu.new'|trans }}
                    </a>
                    {{ knp_pagination_render(pagination) }}
                </th>
            </tr>
        </tfoot>
    </table>   
                </div>
            </div>
        </div>
 </div>
{% endblock %}