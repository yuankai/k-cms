{% extends 'MyexpAdminBundle::base.html.twig' %}
{% block title %}{{ 'menu.new'|trans }} - {{ 'menu.manage'|trans }}{{ parent() }}{% endblock %}
{% block breadcrumd %}
    <li><a class="section" href="{{ path('admin_menu') }}">{{ 'menu.manage'|trans }}</a></li>
    <li class="active">{{ 'menu.new'|trans }}</li>
{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Quick Example</h3>
                </div>
                <div class="box-body">
                    {{ form_row(form.name) }}
                    {{ form_row(form.title) }}
                    {{ form_widget(form.isActive) }}
                </div>
                <div class="box-footer">
                    {{ form_widget(form.submit, {'attr':{'class':'btn-primary'}}) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}