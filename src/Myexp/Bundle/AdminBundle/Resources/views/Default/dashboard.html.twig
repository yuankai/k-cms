{% extends 'MyexpAdminBundle::base.html.twig' %}
{% block title %}{{ 'nav.home'|trans }}{{ parent() }}{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <!-- iCheck -->
    <link rel="stylesheet" href="{{ asset('bundles/myexpadmin/plugins/iCheck/flat/blue.css') }}" type="text/css"/>
    <!-- Morris chart -->
    <link rel="stylesheet" href="{{ asset('bundles/myexpadmin/plugins/morris/morris.css') }}" type="text/css"/>
    <!-- jvectormap -->
    <link rel="stylesheet" href="{{ asset('bundles/myexpadmin/plugins/jvectormap/jquery-jvectormap-1.2.2.css') }}" type="text/css"/>
    <!-- Date Picker -->
    <link rel="stylesheet" href="{{ asset('bundles/myexpadmin/plugins/datepicker/datepicker3.css') }}" type="text/css"/>
    <!-- Daterange picker -->
    <link rel="stylesheet" href="{{ asset('bundles/myexpadmin/plugins/daterangepicker/daterangepicker-bs3.css') }}" type="text/css"/>
    <!-- bootstrap wysihtml5 - text editor -->
    <link rel="stylesheet" href="{{ asset('bundles/myexpadmin/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css') }}" type="text/css"/>
{% endblock %}
{% block content %}
    <div class="ui segment">
        <div>
            <h3>{{ "user.welcome" | trans({'%name%': app.user.username}) }}!</h3>
        </div>
        <div>
            <h4>{{ 'user.last_login'|trans }}:</h4>
            <p>{{ app.user.lastLogin|date('Y-m-d H:i') }}<br /></p>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <!-- jQuery UI 1.11.4 -->
    <script type="text/javascript" src="https://code.jquery.com/ui/1.11.4/jquery-ui.min.js"></script>
    <!-- Morris.js charts -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js"></script>
    <script type="text/javascript" src="{{ asset('bundles/myexpadmin/plugins/morris/morris.min.js') }}"></script>
    <!-- Sparkline -->
    <script type="text/javascript" src="{{ asset('bundles/myexpadmin/plugins/sparkline/jquery.sparkline.min.js') }}"></script>
    <!-- jvectormap -->
    <script type="text/javascript" src="{{ asset('bundles/myexpadmin/plugins/jvectormap/jquery-jvectormap-1.2.2.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/myexpadmin/plugins/jvectormap/jquery-jvectormap-world-mill-en.js') }}"></script>
    <!-- jQuery Knob Chart -->
    <script type="text/javascript" src="{{ asset('bundles/myexpadmin/plugins/knob/jquery.knob.js') }}"></script>
    <!-- daterangepicker -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.10.6/moment.min.js"></script>
    <script type="text/javascript" src="{{ asset('bundles/myexpadmin/plugins/daterangepicker/daterangepicker.js') }}"></script>
    <!-- datepicker -->
    <script type="text/javascript" src="{{ asset('bundles/myexpadmin/plugins/datepicker/bootstrap-datepicker.js') }}"></script>
    <!-- Bootstrap WYSIHTML5 -->
    <script type="text/javascript" src="{{ asset('bundles/myexpadmin/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js') }}"></script>
    <!-- Slimscroll -->
    <script type="text/javascript" src="{{ asset('bundles/myexpadmin/plugins/slimScroll/jquery.slimscroll.min.js') }}"></script>
    <!-- AdminLTE dashboard demo (This is only for demo purposes) -->
    <script type="text/javascript" src="{{ asset('bundles/myexpadmin/js/pages/dashboard.js') }}"></script>
    <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
    <script type="text/javascript">
        $.widget.bridge('uibutton', $.ui.button);
    </script>
{% endblock %}
