{% extends 'MyexpAdminBundle:Admin:layout.html.twig' %}
{% block title %}{{ 'category.show'|trans }}{% endblock %}
{% block breadcrumd %}
<a href="{{ path('admin') }}">{{ 'nav.home'|trans }}</a> ><a href="{{path('category')}}">{{ 'category.manage'|trans }}</a> ><a href="{{app.request.getRequestUri()}}">{{ 'category.show'|trans }}</a></span>
{% endblock %}
{% block content %}
<table class="table table-striped table-bordered bootstrap-datatable datatable">
    <tbody>
        <tr>
            <th>{{ 'category.id'|trans }}</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>{{ 'category.title'|trans }}</th>
            <td>{{ entity.trans.title }}</td>
        </tr>
        <tr>
            <th>{{ 'category.parent'|trans }}</th>
            <td>{% if entity.parent %}{{ entity.parent.trans.title }}{% else %}-{% endif %}</td>
        </tr>
        <tr>
            <th>{{ 'category.name'|trans }}</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>{{ 'category.articles'|trans }}</th>
            <td>{{ entity.articles.count }}</td>
        </tr>
    </tbody>
</table>
<form action="{{ path('category_delete', { 'id': entity.id }) }}" method="post">
    <div class="form-actions">
        <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
        <button type="submit" class="btn btn-warning" onclick="return confirm('{{ 'common.delete_confirm'|trans }}');">{{ 'common.delete'|trans }}</button>
        <input class="btn btn-primary" type="submit" value="{{ 'common.back_list'|trans }}"  onclick="saveToDraft(this, '{{ path('category') }}');" />
        <input class="btn" type="submit" value="{{ 'common.edit'|trans }}"  onclick="saveToDraft(this, '{{ path('category_edit', { 'id': entity.id }) }}');" />
    </div>
</form>
   {% endblock %}
