{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Node list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Websiteid</th>
                <th>Sequenceid</th>
                <th>Title</th>
                <th>Isactive</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('node_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.websiteId }}</td>
                <td>{{ entity.sequenceId }}</td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.isActive }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('node_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('node_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('node_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
