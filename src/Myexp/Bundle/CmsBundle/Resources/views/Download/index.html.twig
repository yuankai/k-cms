{% extends 'MyexpAdminBundle::base.html.twig' %}
{% block title %}{{ 'download.manage'|trans }}{{ parent() }}{% endblock %}
{% block breadcrumd %}
    <div class="active section">{{ 'download.manage'|trans }}</div>
{% endblock %}
{% block content %}
    <table class="ui green table">
        <thead>
            <tr>
                <th class="id"><input type="checkbox" onclick="check_all(this, 'ids');" title="{{ 'common.select'|trans }}" /></th>
                <th>{{ 'download.id'|trans }}</th>
                <th>{{ 'download.title'|trans }}</th>               
                <th>{{ 'download.is_active'|trans }}</th>
                <th>{{ 'download.category'|trans }}</th>
                <th class="actions">{{ 'common.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in pagination %}
                <tr class="{{ cycle(['odd', 'even'], loop.index) }}">
                    <td class="id"><input type="checkbox" name="ids[]" value="{{ entity.id }}" /></td>
                    <td><a href="{{ path('download_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.title }}</td>
                    <td>{% if entity.isActive %}{{ 'common.yes'|trans }}{% else %}{{ 'common.no'|trans }}{% endif %}</td>
                    <td>{{ entity.category.title }}</td>
                    <td>
                        <div class="ui icon buttons">
                            <a class="ui button" href="{{ path('download_show', { 'id': entity.content.id }) }}"  title="{{ 'common.view'|trans }}" target="_blank">
                                <i class="external icon"></i>
                            </a>
                            <a class="ui button" href="{{ path('cms_download_edit', { 'id': entity.id }) }}" title="{{ 'common.edit'|trans }}">
                                <i class="edit icon"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <th colspan="8">
                    <button class="ui left small olive button">
                        {{ 'common.approve'|trans }}
                    </button>
                    <button class="ui left small red button">
                        {{ 'common.deny'|trans }}
                    </button>
                    <a class="ui left small teal labeled icon button" href="{{ path('cms_download_new') }}">
                        <i class="archive icon"></i> {{ 'download.new'|trans }}
                    </a>
                    {{ knp_pagination_render(pagination) }}
                </th>
            </tr>
        </tfoot>
    </table>
{% endblock %}



