{% extends 'SmtCmsBundle:Admin:layout.html.twig' %}
{% block title %}{{ 'download.list'|trans }}{% endblock %}
{% block breadcrumd %}
        <a href="{{ path('admin') }}">{{ 'nav.home'|trans }}</a> ><a href="{{app.request.getRequestUri()}}">{{ 'download.manage'|trans }}</a></span>
{% endblock %}
{% block content %}
<form action="{{ path('download_status') }}" method="post">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th class="id"><input type="checkbox" onclick="check_all(this, 'ids');" title="{{ 'common.select'|trans }}" /></th>
                <th>{{ 'download.id'|trans }}</th>
                <th>{{ 'download.title'|trans }}</th>               
                <th>{{ 'download.is_active'|trans }}</th>
                <th>{{ 'download.category'|trans }}</th>
                <th class="actions">{{ 'common.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr class="{{ cycle(['odd', 'even'], loop.index) }}">
                <td class="id"><input type="checkbox" name="ids[]" value="{{ entity.id }}" /></td>
                <td><a href="{{ path('download_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{% if entity.isActive %}{{ 'common.yes'|trans }}{% else %}{{ 'common.no'|trans }}{% endif %}</td>
                <td>{{ entity.category.trans.title }}</td>
                <td>
                    <a href="{{ path('download_show', { 'id': entity.id }) }}" class="btn btn-success">{{ 'common.show'|trans }}</a>
                    <a href="{{ path('download_edit', { 'id': entity.id }) }}" class="btn btn-danger">{{ 'common.edit'|trans }}</a>
                    <a href="{{path('download_down',{'id':entity.id})}}" class="btn btn-info">{{'common.down'|trans}}</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="form-actions">
        <input class="btn btn-primary" type="submit" value="{{ 'download.new'|trans }}"  onclick="saveToDraft(this, '{{ path('download_new') }}');" />
        <input class="btn" type="submit" name="active" value="{{ 'common.active'|trans }}" />
        <input class="btn" type="submit" name="deny" value="{{ 'common.deny'|trans }}" />
        <input class="btn btn-warning" type="submit" name="delete" value="{{ 'common.delete'|trans }}" onclick="return confirm('{{ 'common.delete_confirm'|trans }}');" />
        <input type="hidden" name="url" value="{{ app.request.uri }}" />
    </div>
</form>
    {% endblock %}



