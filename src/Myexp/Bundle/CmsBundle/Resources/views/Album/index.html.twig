{% extends 'MyexpAdminBundle::base.html.twig' %}
{% block title %}{{ 'album.manage'|trans }}{% endblock %}
{% block breadcrumd %}
    <div class="active section">{{ 'album.manage'|trans }}</div>
{% endblock %}
{% block content %}
    <table class="ui green table">
        <thead>
            <tr>
                <th class="id">{{ 'album.id'|trans }}</th>
                <th>{{ 'album.title'|trans }}</th>
                <th>{{ 'album.name'|trans }}</th>
                <th>{{ 'album.photos'|trans }}</th>
                <th class="actions">{{ 'common.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in pagination %}
                <tr class="{{ cycle(['odd', 'even'], loop.index) }}">
                    <td class="id"><a href="{{ path('album_show', { 'name': entity.name }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.trans.title }}</td>
                    <td>{{ entity.name }}</td>
                    <td>{{ entity.photos.count }}</td>
                    <td>
                        <div class="ui icon buttons">
                            <a class="ui button" href="{{ path('album_show', { 'id': entity.content.id }) }}"  title="{{ 'common.view'|trans }}" target="_blank">
                                <i class="external icon"></i>
                            </a>
                            <a class="ui button" href="{{ path('cms_album_edit', { 'id': entity.id }) }}" title="{{ 'common.edit'|trans }}">
                                <i class="edit icon"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <th colspan="8">
                    <button class="ui left small olive button">
                        {{ 'common.approve'|trans }}
                    </button>
                    <button class="ui left small red button">
                        {{ 'common.deny'|trans }}
                    </button>
                    <a class="ui left small teal labeled icon button" href="{{ path('cms_album_new') }}">
                        <i class="archive icon"></i> {{ 'album.new'|trans }}
                    </a>
                    {{ knp_pagination_render(pagination) }}
                </th>
            </tr>
        </tfoot>
    </table>
{% endblock %}
