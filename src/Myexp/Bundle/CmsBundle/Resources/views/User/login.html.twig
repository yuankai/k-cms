{% extends 'MyexpCmsBundle::base.html.twig' %}
{% block title %}{{ 'back.manage'|trans }}{{parent()}}{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <style type="text/css">
        body {
            background-color: #DADADA;
        }
        body > .grid {
            height: 100%;
        }
        .image {
            margin-top: -100px;
        }
        .column {
            max-width: 450px;
        }
    </style>
{% endblock %}
{% block body %}
    <div class="ui middle aligned center aligned grid">
        <div class="column">
            <h2 class="ui teal image header">
                <img src="{{ asset('bundles/cms/images/logo.png') }}" class="image"/>
                <div class="content">
                    Log-in to your account
                </div>
            </h2>
            <form action="{{ path("user_check") }}" method="POST" class="ui large form">
                <div class="ui stacked segment">
                    <div class="field">
                        <div class="ui left icon input">
                            <i class="user icon"></i>
                            <input type="text" name="_username" value="{{ last_username }}" placeholder="Username or E-mail address">
                        </div>
                    </div>
                    <div class="field">
                        <div class="ui left icon input">
                            <i class="lock icon"></i>
                            <input type="password" name="_password" placeholder="Password">
                        </div>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                    <button class="ui fluid large teal submit button" type="submit">Login</button>
                </div>
            </form>
            
            {% if error %}
            <div class="ui error message">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
            {% endif %}
            
            <div class="ui message">
                New to us? <a href="#">Sign Up</a>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}
