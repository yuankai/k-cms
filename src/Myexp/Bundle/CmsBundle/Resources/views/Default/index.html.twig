{% extends 'SmtCmsBundle::layout.html.twig' %}
{% block title %}{{ 'site.name'|trans }}{% endblock %}
{% block main %}
    <div class="w1000">
        <div class="index_Pro  fltL">
            <div class="index_side_top">
                <div class="index_side_h1">通知公告</div>
                <div class="index_side_c">
                    {% for notice in notices %}
                        <div class="index_left_list"><a href="{{ path('article_show', { 'id': notice.id }) }}">{{notice.trans.title}}---[{{notice.publishTime|date('Y-m-d')}}]</a></div>
                    {% endfor %}
                </div>
            </div>
            <div class="index_side_bottom">
                <div class="index_side_h1">会员登录</div>
                <div class="index_logoin">
                    <ul>
                        <li><span>用户名：</span><input type="text" value="" class="index_logoin_text"></li>
                        <li><span>密&nbsp; 码：</span><input type="password" value=""class="index_logoin_text2"></li>
                        <li><input type="submit" value="注册" class="index_logoin_sub"><input type="submit" value="登录" class="index_logoin_sub"></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="index_cont  fltL">
            <div class="index_news">
                <div class="tabs">
                    <ul class="bgclass">
                        <li><a href="#panel-1">图片新闻</a></li>
                        <li><a href="#panel-2">中心动态</a></li>
                        <li><a href="#panel-3">行业资讯</a></li>
                    </ul>
                    <!--   幻灯   !-->
                    <div id="panel-1" class="index_news_adv">
                        <div id="KinSlideshow"  style="visibility:hidden;">
                            {% for pic in pics %}
                                <a href="{{ path('article_show', { 'id': pic.id }) }}">
                                    <img src="/{{pic.picurl|picurl}}" alt="{{pic.trans.title|truncate(20)}}" width="364px" height="183px" />
                                </a>
                            {% endfor %}
                        </div>
                    </div>
                    <div id="panel-2" class="index_news_adv">
                        <div clsaa="index_news_cen"  style="visibility: visible; width: 364px; height: 183px; overflow: hidden; position: relative;">
                            <ul>
                                {% for center in centers %}                                   
                                    <li>
                                        <a href="{{ path('article_show', { 'id': center.id }) }}">{{center.trans.title|slice(0, 22)}}</a><em>[{{center.publishTime|date('Y-m-d')}}]</em>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>  
                    </div>
                    <div id="panel-3" class="index_news_adv">
                        <div clsaa="index_news_cen"  style="visibility: visible; width: 364px; height: 183px; overflow: hidden; position: relative;">
                            <ul>
                                {% for industry in industrys %}
                                    <li>
                                        <a href="{{ path('article_show', { 'id': industry.id }) }}" title="{{industry.trans.title }}">{{industry.trans.title|truncate(22)}}</a><em>[{{industry.publishTime|date('Y-m-d')}}]</em>
                                    </li>
                                {% endfor %} 
                            </ul>
                        </div>  
                    </div>
                </div>
            </div>
            <div class="research">
                <div class="research_h1"><span>科研服务</span><a href="{{path('article_list',{'name':'flow'})}}">{{ 'common.more'|trans }}>></a></div>
                {{ render(controller('SmtCmsBundle:Menu:service',{ 'parent': 5 })) }}
            </div>
        </div>
        <div class="index_cont fltR">
            <div class="index_news_r">
                <div class="index_news_r_h1"><span>学科建设</span><a href="{{path('article_list',{'name':'approach'})}}">{{ 'common.more'|trans }}>></a></div>
                <ul>
                    {% for construction in constructions %}
                        <li>
                            <a href="{{ path('article_show', { 'id': construction.id }) }}" title="{{ construction.trans.title }}">{{construction.trans.title|slice(0, 22)}}</a><em>[{{construction.publishTime|date('Y-m-d')}}]</em>
                        </li>
                    {% endfor %}
                </ul>
            </div>
            <div class="research">
                <div class="research_h1"><span>检测服务</span><a href="{{path('article_list',{'name':'detection-flow'})}}">{{ 'common.more'|trans }}>></a></div>
                {{ render(controller('SmtCmsBundle:Menu:service',{ 'parent': 13 })) }}
                </ul>
            </div>
        </div>
    </div>
    <div class="clear"></div>
{% endblock %}