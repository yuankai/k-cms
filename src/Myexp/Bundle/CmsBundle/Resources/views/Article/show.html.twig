{% extends 'MyexpCmsBundle::common.html.twig' %}
{% block title %}{{ entity.content.title }} - {{ parent() }}{% endblock %}
{% block inner %}
    <div class="news_content">
        <h1>{{ entity.content.title }}</h1>
        <div class="news_content_h2">
            <span>{{ 'article.publish_time'|trans }}：{{ entity.publishTime|date('Y-m-d') }} </span>&nbsp; &nbsp;&nbsp;&nbsp;
            <span>{{ 'article.source'|trans }}：{{ entity.source}}  </span>  &nbsp; &nbsp;&nbsp;&nbsp;
            <span>{{ 'article.author'|trans }}：{{ entity.author}} </span> 
        </div> 
        <div class="news_content_p">
            {{ entity.content.description | raw }}
        </div>
    </div>
{% endblock %}