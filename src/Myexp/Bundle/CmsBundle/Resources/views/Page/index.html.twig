{% extends 'MyexpAdminBundle::base.html.twig' %}
{% block title %}{{ 'page.list'|trans }}{{ parent() }}{% endblock %}
{% block content_title %}{{ 'page.list'|trans }}{% endblock %}
{% block breadcrumd %}
    <li class="active">{{ 'page.manage'|trans }}</li>
    {% endblock %}
    {% block content %}
<div class="col-md-6">
            <div class="box box-solid box-primary">
                {{ macro.box_header('built from macro', true, false, 'primary') }}
                <div class="box-body">
                    some content...
                </div>
            </div>
        </div>
    <div class="row">

        <div class="col-xs-12">

            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Hover Data Table</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>
                                    <input class="ui checkbox" type="checkbox" onclick="check_all(this, 'ids');" title="{{ 'common.select'|trans }}" />
                                    {{ 'common.select'|trans }}
                                </th>
                                <th>{{ 'page.id'|trans }}</th>
                                <th>{{ 'page.title'|trans }}</th>
                                <th>{{ 'page.url'|trans }}</th>
                                <th>{{ 'common.actions'|trans }}</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for entity in pagination %}
                                <tr class="{{ cycle(['odd', 'even'], loop.index) }}">
                                    <td>
                                        <input class="ui checkbox" type="checkbox" title="{{ 'common.select'|trans }}" />
                                    </td>
                                    <td>{{ entity.id }}</td>
                                    <td>{{ entity.content.title }}</td>
                                    <td>
                                        {% if entity.content.urlAlias is not null %}
                                            {{ entity.content.urlAlias.url }}
                                        {% else %}

                                        {% endif %}
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            <a class="btn btn-default" href="{{ path('page_show', { 'id': entity.content.id }) }}"  title="{{ 'common.view'|trans }}" target="_blank">
                                                <i class="fa fa-eye"></i>
                                            </a>
                                            <a class="btn btn-default" href="{{ path('cms_page_edit', { 'id': entity.id }) }}" title="{{ 'common.edit'|trans }}">
                                                <i class="fa fa-edit"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                        <tfoot>
                            <tr>
                                <th colspan="8">
                                    
                                    {{ knp_pagination_render(pagination) }}
                                </th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                                <div class="box-footer">
                                    <button class="btn btn-success">
                                        {{ 'common.approve'|trans }}
                                    </button>
                                    <button class="btn btn-danger">
                                        {{ 'common.deny'|trans }}
                                    </button>
                                    <a class="ui left small teal labeled icon button" href="{{ path('cms_page_new') }}">
                                        <i class="file icon"></i> {{ 'page.new'|trans }}
                                    </a>
                                </div>
            </div>

        </div>

    </div>


    <div class="ui segment">
        {{ form_start(find_form) }}
        <div class="inline fields">
            {{ form_widget(find_form.content) }}
            {{ form_rest(find_form) }}
        </div>
        {{ form_end(find_form) }}
    </div>

{% endblock %}