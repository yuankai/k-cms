<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %} - {{ 'admin.title'|trans }}{% endblock %}</title>
        {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('bundles/myexpcms/semantic-ui/semantic.min.css') }}" rel="stylesheet" type="text/css"/>
        <link rel="stylesheet" href="{{ asset('bundles/myexpcms/css/admin.css') }}" rel="stylesheet" type="text/css"/>
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block body %}
            <div class="ui teal inverted fluid menu">
                <div class="header item">K-WEB</div>
                <div class="active item"><i class="home icon"></i>{{ 'admin.homepage'|trans }}</div>
                <div class="ui dropdown item">
                    <i class="linkify icon"></i>{{ 'website.homepage'|trans }}<i class="dropdown icon"></i>
                    <div class="menu transition hidden" tabindex="-1">
                        <div class="item">Action</div>
                        <div class="item">Another Action</div>
                        <div class="item">Something else here</div>
                    </div>
                </div>
                <a class="sidebar item"><i class="sidebar icon"></i>{{ 'admin.menu'|trans }}</a>
                <div class="right menu">
                    <div class="item">
                        <div class="ui transparent inverted icon input">
                            <i class="search icon"></i>
                            <input type="text" placeholder="Search">
                        </div>
                    </div>
                    <div class="ui dropdown item">
                        <i class="dropdown icon"></i>
                        <div class="menu transition hidden" tabindex="-1">
                            <div class="item">Action</div>
                            <div class="item">Another Action</div>
                            <div class="item">Something else here</div>
                            <div class="divider"></div>
                            <a class="item" href="{{ path('user_logout') }}">{{ 'user.password.change'|trans }}</a>
                            <div class="divider"></div>
                            <a class="item" href="{{ path('user_logout') }}">
                                <i class="sign out icon"></i>{{ 'user.logout'|trans }}
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="ui grid">
                    <div class="three wide column">
                        <div class="ui vertical pointing fluid menu">
                            {% if primaryMenu is not defined %}
                                {% set primaryMenu = "" %}
                            {% endif %}
                            <a class="{% if primaryMenu == "admin_homepage" %}active teal {% endif %}item" href="{{ path('admin_homepage') }}">
                                <i class="dashboard icon"></i> {{ 'admin.dashboard'|trans }}
                            </a>
                            <div class="item">
                                <div class="header">{{ 'admin.content'|trans }}</div>
                                <div class="menu">
                                    <a class="{% if primaryMenu == "admin_article" %}active teal {% endif %}item" href="{{ path('admin_article') }}">
                                        <i class="write icon"></i> {{ 'article.manage'|trans }}
                                    </a>
                                    <a class="{% if primaryMenu == "admin_page" %}active teal {% endif %}item" href="{{ path('admin_page') }}">
                                        <i class="file icon"></i> {{ 'page.manage'|trans }}
                                    </a>
                                    <a class="{% if primaryMenu == "admin_download" %}active teal {% endif %}item" href="{{ path('admin_download') }}">
                                        <i class="download icon"></i> {{ 'download.manage'|trans }}
                                    </a>
                                    <a class="{% if primaryMenu == "admin_product" %}active teal {% endif %}item" href="{{ path('admin_product') }}">
                                        <i class="shop icon"></i> {{ 'product.manage'|trans }}
                                    </a>
                                    <a class="{% if primaryMenu == "admin_album" %}active teal {% endif %}item" href="{{ path('admin_album') }}">
                                        <i class="photo icon"></i> {{ 'album.manage'|trans }}
                                    </a>
                                </div>
                            </div>
                            <a class="{% if primaryMenu == "admin_category" %}active teal {% endif %}item" href="{{ path('admin_category') }}">
                                <i class="folder icon"></i> {{ 'category.manage'|trans }}
                            </a>
                            <div class="item">
                                <div class="header">{{ 'admin.other'|trans }}</div>
                                <div class="menu">
                                    <a class="{% if primaryMenu == "admin_slider" %}active teal {% endif %}item" href="{{ path('admin_slider') }}">
                                        <i class="file image outline icon"></i> {{ 'slider.manage'|trans }}
                                    </a>
                                    <a class="{% if primaryMenu == "admin_link" %}active teal {% endif %}item" href="{{ path('admin_link') }}">
                                        <i class="linkify icon"></i> {{ 'link.manage'|trans }}
                                    </a>
                                </div>
                            </div>
                            <a class="{% if primaryMenu == "admin_user" %}active teal {% endif %}item" href="{{ path('admin_user') }}">
                                <i class="user icon"></i> {{ 'user.manage'|trans }}
                            </a>
                            <a class="{% if primaryMenu == "admin_website" %}active teal {% endif %}item" href="{{ path('admin_website') }}">
                                <i class="home icon"></i> {{ 'website.manage'|trans }}
                            </a>
                        </div>
                    </div>
                    <div class="thirteen wide column">
                        <div class="ui breadcrumb">
                            <a class="section" href="{{ path('admin_homepage') }}">{{ 'nav.home'|trans }}</a>
                            <i class="right angle icon divider"></i>
                            {% block breadcrumd %}{% endblock %}
                        </div>
                        <div class="ui content">
                            {% block content %}{% endblock %}
                        </div>
                        {% if app.session.flashbag.has('notice') %}
                            <div class="ui success message">
                                <ul class="list">
                                {% for flashMessage in app.session.flashbag.get('notice') %}
                                    <li>{{ flashMessage | trans }}</li>
                                {% endfor %}
                                </ul>
                            </div>
                        {% endif %}
                        {% if app.session.flashbag.has('error') %}
                            <div class="ui warning message">
                                <ul class="list">
                                {% for flashMessage in app.session.flashbag.get('error') %}
                                    <li>{{ flashMessage | trans }}</li>
                                {% endfor %}
                                </ul>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
            <div id="footer-copyright">
                <p>&copy; {{ 'now'|date('Y') }} - The K-WEB</p>
            </div>
        {% endblock %}
        {% block javascripts %}
        <script type="text/javascript" src="{{ asset('bundles/myexpcms/js/jquery.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/myexpcms/semantic-ui/semantic.min.js') }}"></script>
        <script type="text/javascript">
            var base_url = '{{ app.request.getBaseURL() }}';
            $(function () {
                $('.message').fadeOut(2000);
                $('.ui.menu .ui.dropdown').dropdown({
                    on: 'hover'
                });
                $('.sidebar.item').on('click', function () {
                    if($('.three.wide.column').is(":hidden")){
                        $('.three.wide.column').show();
                        $('.sixteen.wide.column').attr('class', 'thirteen wide column');
                    } else {
                        $('.three.wide.column').hide();
                        $('.thirteen.wide.column').attr('class', 'sixteen wide column');
                    }
                });
            });
        </script>
        {% endblock %}
    </body>
</html>




