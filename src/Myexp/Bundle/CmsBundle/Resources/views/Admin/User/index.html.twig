{% extends 'SmtCmsBundle:Admin:layout.html.twig' %}
{% block title %}{{ 'user.list'|trans }}{% endblock %}
{% block breadcrumd %}
        <a href="{{ path('admin') }}">{{ 'nav.home'|trans }}</a> ><a href="{{app.request.getRequestUri()}}">{{ 'user.manage'|trans }}</a></span>
{% endblock %}
{% block content %}
<table class="table table-striped table-bordered bootstrap-datatable datatable">
    <thead>
        <tr>
            <th>{{ 'user.id'|trans }}</th>
            <th>{{ 'user.username'|trans }}</th>
            <th>{{ 'user.email'|trans }}</th>
            <th>{{ 'user.last_login'|trans }}</th>
            <th>{{ 'user.active'|trans }}</th>
            <th>{{ 'common.actions'|trans }}</th>
        </tr>
    </thead>
    <tbody>
        {% for entity in entities %}
        <tr class="{{ cycle(['odd', 'even'], loop.index) }}">
            <td><a href="{{ path('user_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.username }}</td>
            <td>{{ entity.email }}</td>
            <td>{{ entity.lastLogin|date('Y-m-d H:i') }}</td>
            <td>{% if entity.isActive %}{{ 'common.yes'|trans }}{% else %}{{ 'common.no'|trans }}{% endif %}</td>
            <td>
                <a href="{{ path('user_show', { 'id': entity.id }) }}" class="btn btn-success">{{ 'common.show'|trans }}</a>
                <a href="{{ path('user_edit', { 'id': entity.id }) }}" class="btn btn-danger">{{ 'common.edit'|trans }}</a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
<form>
    <div class="form-actions">
        <input class="btn btn-primary" type="submit" value="{{ 'user.new'|trans }}"  onclick="saveToDraft(this, '{{ path('user_new') }}');" />
    </div>
</form>
</div>
    {% endblock %}
