{% block body %}
        <div class="container-fluid">
            <div class="row-fluid">

                <div class="row-fluid">
                    <div class="span12 center login-header">
                        <h2>{{'site.name'|trans}}{{ 'back.manage'|trans}}</h2>
                    </div><!--/span-->
                </div><!--/row-->
                <div class="row-fluid">
                    <div class="well span5 center login-box">
                        <div class="alert alert-info">
                            {{'back.login'|trans}}
                        </div>
                        <form class="form-horizontal" action="{{ path('user_check') }}" method="post">
						<fieldset>
							<div class="input-prepend" title="Username" data-rel="tooltip">
								<span class="add-on"><i class="icon-user"></i></span>
                                                                {{ form_widget(form._username) }}
                                                        </div>
							<div class="clearfix"></div>
							<div class="input-prepend" title="Password" data-rel="tooltip">
								<span class="add-on"><i class="icon-lock"></i></span>
                                                                {{ form_widget(form._password) }}
							</div>
							<div class="clearfix"></div>

							<div class="input-prepend">
                                                            {{ form_widget(form._remember_me) }}
                                                            {{ form_label(form._remember_me) }}
							</div>
							<div class="clearfix"></div>
							<p class="center span5">
							<button type="submit" class="btn btn-primary">{{'user.login'|trans}}</button>
							</p>
						</fieldset>
					</form>
                    </div><!--/span-->
                </div><!--/row-->
            </div><!--/fluid-row-->

        </div><!--/.fluid-container-->

