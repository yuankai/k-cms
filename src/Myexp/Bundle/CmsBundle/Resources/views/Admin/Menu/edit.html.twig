{% extends 'MyexpCmsBundle:Admin:layout.html.twig' %}
{% block title %}{{ 'menu.edit'|trans }}{% endblock %}
{% block breadcrumd %}
        <a href="{{ path('admin') }}">{{ 'nav.home'|trans }}</a> ><a href="{{path('menu')}}">{{ 'menu.manage'|trans }}</a> ><a href="{{app.request.getRequestUri()}}">{{ 'menu.edit'|trans }}</a></span>
{% endblock %}
{% block content %}
<form action="{{ path('menu_update', { 'id': entity.id }) }}" method="post">
    <div class="form">
        <input type="hidden" name="_method" value="PUT" />
         {% form_theme edit_form 'MyexpCmsBundle:Form:tabs.html.twig' %}
        {{ form_widget(edit_form) }}
        <div class="form-actions">
            <input type="submit" class="btn btn-primary" value="{{ 'common.submit'|trans }}" />
            <input type="reset" class="btn btn-danger" value="{{ 'common.reset'|trans }}" />
        </div>
    </div>
</form>
<form action="{{ path('menu_delete', { 'id': entity.id }) }}" method="post">
    <div class="form-actions">
        <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
        <button class="btn btn-warning" type="submit" onclick="return confirm('{{ 'common.delete_confirm'|trans }}');">{{ 'common.delete'|trans }}</button>
        <input class="btn btn-primary" type="submit" value="{{ 'common.back_list'|trans }}"  onclick="saveToDraft(this, '{{ path('menu') }}');" />
    </div>
</form>
{% endblock %}
{% block javascripts %}
{{ parent() }}
<script type="text/javascript">
    $(document).ready(function() {
        $('.tabs').tabs();
    });
    </script>
{% endblock %}
