{% extends 'MyexpCmsBundle:Admin:base.html.twig' %}
{% block title %}{{ 'menu.list'|trans }}{{ parent() }}{% endblock %}
{% block breadcrumd %}
    <div class="active section">{{ 'menu.manage'|trans }}</div>
{% endblock %}
{% block content %}
    <table class="ui green table">
        <thead>
            <tr>
                <th>{{ 'menu.id'|trans }}</th>
                <th>{{ 'menu.name'|trans }}</th>
                <th>{{ 'menu.title'|trans }}</th>
                <th>{{ 'common.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in pagination %}
            <tr class="{{ cycle(['odd', 'even'], loop.index) }}">
                <td>{{ entity.id }}</td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.title }}</td>
                <td>
                    <div class="ui icon buttons">
                        <a class="ui button" href="{{ path('admin_menu_edit', { 'id': entity.id }) }}" title="{{ 'common.edit'|trans }}">
                            <i class="edit icon"></i>
                        </a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <th colspan="8">
                    <a class="ui left small teal labeled icon button" href="{{ path('admin_menu_new') }}">
                        <i class="sidebar icon"></i> {{ 'menu.new'|trans }}
                    </a>
                    {{ knp_pagination_render(pagination) }}
                </th>
            </tr>
        </tfoot>
    </table>   
{% endblock %}