{% extends 'SmtCmsBundle:Admin:layout.html.twig' %}
{% block title %}{{ 'menu.list'|trans }}{% endblock %}
{% block breadcrumd %}
        <a href="{{ path('admin') }}">{{ 'nav.home'|trans }}</a> ><a href="{{app.request.getRequestUri()}}">{{ 'menu.manage'|trans }}</a></span>
{% endblock %}
{% block content %}
<form action="{{ path('menu_order') }}" method="post">
    <table class="table table-striped table-bordered bootstrap-datatable datatable">
        <thead>
            <tr>
                <th>{{ 'menu.title'|trans }}</th>
                <th>{{ 'menu.path'|trans }}</th>
                <th>{{ 'menu.is_nav'|trans }}</th>
                <th>{{ 'menu.order'|trans }}</th>
                <th class="actions">{{ 'common.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
                <tr>
                    <td>{{ entity.trans.title }}</td>
                    <td>{{ entity.path }}</td>
                    <td>{% if entity.isNav %}{{ 'common.yes'|trans }}{% else %}{{ 'common.no'|trans }}{% endif %}</td>
                    <td><input type="number" name="orders[{{ entity.id }}]" value="{{ entity.sortOrder }}" class="number" /></td>
                    <td>
                        <a href="{{ path('menu_show', { 'id': entity.id }) }}" class="btn btn-success">{{ 'common.show'|trans }}</a>
                        <a href="{{ path('menu_edit', { 'id': entity.id }) }}" class="btn btn-danger">{{ 'common.edit'|trans }}</a>
                    </td>
                </tr>
        {% endfor %}
            </tbody>
        </table>
            <div class="form-actions">
                <input class="btn btn-primary" type="submit" value="{{ 'menu.new'|trans }}"  onclick="saveToDraft(this, '{{ path('menu_new') }}');" />
                <input type="submit" class="btn" value="{{ 'common.submit'|trans }}" />
            </div>
    </form>
{% endblock %}
