{% extends 'MyexpCmsBundle:Admin:layout.html.twig' %}
{% block title %}{{ 'menu.show'|trans }}{% endblock %}
{% block breadcrumd %}
<a href="{{ path('admin') }}">{{ 'nav.home'|trans }}</a> ><a href="{{path('menu')}}">{{ 'menu.manage'|trans }}</a> ><a href="{{app.request.getRequestUri()}}">{{ 'menu.show'|trans }}</a></span>
{% endblock %}
{% block content %}
<table class="table table-striped table-bordered bootstrap-datatable datatable">
    <tbody>
        <tr>
            <th>{{ 'menu.id'|trans }}</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>{{ 'menu.parent'|trans }}</th>
            <td>{% if entity.parent %}{{ entity.parent.trans.title }}{% else %}-{% endif %}</td>
        </tr>
        <tr>
            <th>{{ 'menu.title'|trans }}</th>
            <td>{{ entity.trans.title }}</td>
        </tr>
        <tr>
            <th>{{ 'menu.path'|trans }}</th>
            <td>{{ entity.path }}</td>
        </tr>
        <tr>
            <th>{{ 'menu.order'|trans }}</th>
            <td>{{ entity.sortOrder }}</td>
        </tr>
        <tr>
            <th>{{ 'menu.is_nav'|trans }}</th>
            <td>{% if entity.isNav %}{{ 'common.yes'|trans }}{% else %}{{ 'common.no'|trans }}{% endif %}</td>
        </tr>
    </tbody>
</table>
<form action="{{ path('menu_delete', { 'id': entity.id }) }}" method="post">
    <div class="form-actions">
        <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
        <button class="btn btn-warning" type="submit" onclick="return confirm('{{ 'common.delete_confirm'|trans }}');">{{ 'common.delete'|trans }}</button>
        <input class="btn" type="submit" value="{{ 'common.edit'|trans }}"  onclick="saveToDraft(this, '{{ path('menu_edit', { 'id': entity.id }) }}');" />
        <input class="btn btn-primary" type="submit" value="{{ 'common.back_list'|trans }}"  onclick="saveToDraft(this, '{{ path('menu') }}');" />
    </div>
</form>
{% endblock %}
