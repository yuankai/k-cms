{% extends 'MyexpCmsBundle:Admin:layout.html.twig' %}
{% block title %}{{ 'slider.edit'|trans }}{% endblock %}
{% block breadcrumd %}
<a href="{{ path('admin') }}">{{ 'nav.home'|trans }}</a> ><a href="{{path('slider')}}">{{ 'slider.manage'|trans }}</a> ><a href="{{app.request.getRequestUri()}}">{{ 'slider.edit'|trans }}</a></span>
{% endblock %}
{% block content %}
<form action="{{ path('slider_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    <div class="form">
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <div class="form-actions">
            <input type="button" class="btn" value="{{ 'slider.photo_add'|trans }}" id="add_slider_photo" />
            <input type="submit" class="btn btn-primary" value="{{ 'common.submit'|trans }}" />
            <input type="reset" class="btn btn-danger" value="{{ 'common.reset'|trans }}" />
        </div>
    </div>
</form>
<div class="form-actions">
    <form action="{{ path('slider_delete', { 'id': entity.id }) }}" method="post">  
        <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
        <button type="submit" class="btn btn-warning" onclick="return confirm('{{ 'common.delete_confirm'|trans }}');">{{ 'common.delete'|trans }}</button>
        <input class="btn btn-primary" type="submit" value="{{ 'common.back_list'|trans }}"  onclick="saveToDraft(this, '{{ path('slider') }}');" />
    </form>
</div>
{% endblock %}
{% block javascripts %}
{{ parent() }}
<script type="text/javascript" src="{{ asset('ckeditor/ckeditor.js') }}"></script>
<script type="text/javascript" src="{{ asset('ckfinder/ckfinder.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/smtcms/js/admin.slider.js') }}"></script>
{% endblock %}