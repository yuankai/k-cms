{% extends 'SmtCmsBundle:Admin:layout.html.twig' %}
{% block title %}{{ 'slider.list'|trans }}{% endblock %}
{% block breadcrumd %}
        <a href="{{ path('admin') }}">{{ 'nav.home'|trans }}</a> ><a href="{{app.request.getRequestUri()}}">{{ 'slider.manage'|trans }}</a></span>
{% endblock %}
{% block content %}
<table class="table table-striped table-bordered bootstrap-datatable datatable">
    <thead>
        <tr>
            <th>{{ 'slider.id'|trans }}</th>
            <th>{{ 'slider.name'|trans }}</th>
            <th>{{ 'slider.title'|trans }}</th>
            <th>{{ 'common.actions'|trans }}</th>
        </tr>
    </thead>
    <tbody>
        {% for entity in entities %}
        <tr>
            <td><a href="{{ path('slider_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.title }}</td>
            <td>
                <a href="{{ path('slider_show', { 'id': entity.id }) }}" class="btn btn-success">{{ 'common.show'|trans }}</a>
                <a href="{{ path('slider_edit', { 'id': entity.id }) }}" class="btn btn-danger">{{ 'common.edit'|trans }}</a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
<form>
    <div class="form-actions">
        <input class="btn btn-primary" type="submit" value="{{ 'slider.new'|trans }}"  onclick="saveToDraft(this, '{{ path('slider_new') }}');" />
    </div>
</form>
    {% endblock %}
