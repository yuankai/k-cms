{% extends 'MyexpCmsBundle:Admin:layout.html.twig' %}
{% block title %}{{ 'page.edit'|trans }}{% endblock %}
{% block breadcrumd %}
        <a href="{{ path('admin') }}">{{ 'nav.home'|trans }}</a> ><a href="{{path('page')}}">{{ 'page.manage'|trans }}</a> ><a href="{{app.request.getRequestUri()}}">{{ 'page.edit'|trans }}</a></span>
{% endblock %}
{% block content %}
<div class="form">
    <form action="{{ path('page_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {% form_theme edit_form 'MyexpCmsBundle:Form:tabs.html.twig' %}
        {{ form_widget(edit_form) }}
        <div class="form-actions">
            <input class="btn btn-primary" type="submit" value="{{ 'common.submit'|trans }}" />
            <input class="btn" type="reset" value="{{ 'common.reset'|trans }}" />
    </form>
</div>
<form action="{{ path('page_delete', { 'id': entity.id }) }}" method="post">
    <div class="form-actions">
        <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
        <button  class="btn" type="submit" onclick="return confirm('{{ 'common.delete_confirm'|trans }}');">{{ 'common.delete'|trans }}</button>
        <a href="{{ path('page') }}">{{ 'common.back_list'|trans }}</a>
    </div>
</form>
</div>


{% endblock %}
{% block javascripts %}
{{ parent() }}
<script type="text/javascript" src="{{ asset('ckeditor/ckeditor.js') }}"></script>
<script type="text/javascript" src="{{ asset('ckfinder/ckfinder.js') }}"></script>
<script type="text/javascript">
    $(document).ready(function() {
        $('.tabs').tabs();
        var editor_zh = CKEDITOR.replace('smt_cmsbundle_page_type_translations_zh_content');
        CKFinder.setupCKEditor(editor_zh, '/ckfinder/');
    });
</script>
{% endblock %}