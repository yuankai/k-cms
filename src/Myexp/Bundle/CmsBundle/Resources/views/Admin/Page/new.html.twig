{% extends 'SmtCmsBundle:Admin:layout.html.twig' %}
{% block title %}{{ 'page.new'|trans }}{% endblock %}
{% block breadcrumd %}
        <a href="{{ path('admin') }}">{{ 'nav.home'|trans }}</a> ><a href="{{path('page')}}">{{ 'page.manage'|trans }}</a> ><a href="{{app.request.getRequestUri()}}">{{ 'page.new'|trans }}</a></span>
{% endblock %}
{% block content %}
<form action="{{ path('page_create') }}" method="post" {{ form_enctype(form) }}>
    <div class="form">
        {% form_theme form 'SmtCmsBundle:Form:tabs.html.twig' %}
        {{ form_widget(form) }}
        <div class="form-actions">
            <input class="btn btn-primary" type="submit" value="{{ 'common.submit'|trans }}" />
            <input class="btn" type="reset" value="{{ 'common.reset'|trans }}" />
        </div>
    </div>
</form>
<form action="{{ path('page') }}" method="GET">
<div class="form-actions">
        <input class="btn" type="submit" value="{{ 'common.back_list'|trans }}" />
</div>
    </form>
{% endblock %}
{% block javascripts %}
{{ parent() }}
<script type="text/javascript" src="{{ asset('ckeditor/ckeditor.js') }}"></script>
<script type="text/javascript" src="{{ asset('ckfinder/ckfinder.js') }}"></script>
<script type="text/javascript">
    $(document).ready(function() {
        $('.tabs').tabs();
        var editor_zh = CKEDITOR.replace('smt_cmsbundle_page_type_translations_zh_content');
        CKFinder.setupCKEditor(editor_zh, '/ckfinder/');
    });
</script>
{% endblock %}