{% extends 'MyexpCmsBundle:Admin:base.html.twig' %}
{% block title %}{{ 'link.manage'|trans }}{{ parent() }}{% endblock %}
{% block breadcrumd %}
    <div class="active section">{{ 'link.manage'|trans }}</div>
{% endblock %}
{% block content %}
    <table class="ui green table">
        <thead>
            <tr>
                <th class="id">{{ 'link.id'|trans }}</th>
                <th>{{ 'link.title'|trans }}</th>
                <th>{{ 'link.path'|trans }}</th>
                <th>{{ 'link.order'|trans }}</th>
                <th class="actions">{{ 'common.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in pagination %}
            <tr>
                    <td>
                        <a href="{{ path('link_show', { 'id': entity.id }) }}">{{ entity.id }}</a>
                        <input type="hidden" name="ids[]" value="{{ entity.id }}" />
                    </td>
                    <td>{{ entity.trans.title }}</td>
                    <td><input type="text" name="paths[{{ entity.id }}]" value="{{ entity.path }}" /></td>
                    <td><input type="number" name="orders[{{ entity.id }}]" value="{{ entity.sortOrder }}" class="number" /></td>
                    <td class="actions">
                        <a href="{{ path('link_edit', { 'id': entity.id }) }}" class="btn btn-danger">{{ 'common.edit'|trans }}</a>
                    </td>
                </tr>
        {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <th colspan="8">
                    <div class="ui left small button">
                        Approve
                    </div>
                    <div class="ui left small button">
                        Approve All
                    </div>
                    <a class="ui left small teal labeled icon button" href="{{ path('admin_link_new') }}">
                        <i class="archive icon"></i> {{ 'link.new'|trans }}
                    </a>
                    {{ knp_pagination_render(pagination) }}
                </th>
            </tr>
        </tfoot>
    </table>
{% endblock %}