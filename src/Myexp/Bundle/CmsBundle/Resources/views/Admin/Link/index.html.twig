{% extends 'MyexpCmsBundle:Admin:layout.html.twig' %}
{% block title %}{{ 'link.list'|trans }}{% endblock %}
{% block breadcrumd %}
        <a href="{{ path('admin') }}">{{ 'nav.home'|trans }}</a> ><a href="{{app.request.getRequestUri()}}">{{ 'link.manage'|trans }}</a></span>
{% endblock %}
{% block content %}
<form action="{{ path('link_status') }}" method="post">
    <table class="table table-striped table-bordered bootstrap-datatable datatable">
        <thead>
            <tr>
                <th class="id">{{ 'link.id'|trans }}</th>
                <th>{{ 'link.title'|trans }}</th>
                <th>{{ 'link.path'|trans }}</th>
                <th>{{ 'link.order'|trans }}</th>
                <th class="actions">{{ 'common.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
                <tr>
                    <td>
                        <a href="{{ path('link_show', { 'id': entity.id }) }}">{{ entity.id }}</a>
                        <input type="hidden" name="ids[]" value="{{ entity.id }}" />
                    </td>
                    <td>{{ entity.trans.title }}</td>
                    <td><input type="text" name="paths[{{ entity.id }}]" value="{{ entity.path }}" /></td>
                    <td><input type="number" name="orders[{{ entity.id }}]" value="{{ entity.sortOrder }}" class="number" /></td>
                    <td class="actions">
                        <a href="{{ path('link_show', { 'id': entity.id }) }}" class="btn btn-success">{{ 'common.show'|trans }}</a>
                        <a href="{{ path('link_edit', { 'id': entity.id }) }}" class="btn btn-danger">{{ 'common.edit'|trans }}</a>
                    </td>
                </tr>
        {% endfor %}
            </tbody>
        </table>
        <div class="form-actions">
            <input class="btn btn-primary" type="submit" value="{{ 'link.new'|trans }}"  onclick="saveToDraft(this, '{{ path('link_new') }}');" />
            <input type="submit" class="btn" value="{{ 'common.submit'|trans }}" />
            <input type="hidden" class="btn" name="url" value="{{ app.request.uri }}" />
        </div>
    </form>
{% endblock %}