{% extends 'SmtCmsBundle:Admin:layout.html.twig' %}
{% block title %}{{ 'category.edit'|trans }}{% endblock %}
{% block breadcrumd %}
        <a href="{{ path('admin') }}">{{ 'nav.home'|trans }}</a> ><a href="{{path('category')}}">{{ 'category.manage'|trans }}</a> ><a href="{{app.request.getRequestUri()}}">{{ 'category.edit'|trans }}</a></span>
{% endblock %}
{% block content %}
<form action="{{ path('category_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    <div class="form">
        <input type="hidden" name="_method" value="PUT" />
        {% form_theme edit_form 'SmtCmsBundle:Form:tabs.html.twig' %}
        {{ form_widget(edit_form) }}
        <div class="form-actions">
            <input type="submit" class="btn btn-primary" value="{{ 'common.submit'|trans }}" />
            <input type="reset" class="btn btn-danger" value="{{ 'common.reset'|trans }}" />
        </div>
    </div>
</form>
<div class="form-actions">
        <form action="{{ path('category_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit" class="btn btn-warning" onclick="return confirm('{{ 'common.delete_confirm'|trans }}');">{{ 'common.delete'|trans }}</button>
            <input class="btn btn-primary" type="submit" value="{{ 'common.back_list'|trans }}"  onclick="saveToDraft(this, '{{ path('category') }}');" />
        </form>
</div>
{% endblock %}
{% block javascripts %}
{{ parent() }}
<script type="text/javascript">
    $(document).ready(function() {
        $('.tabs').tabs();
    });
</script>
{% endblock %}