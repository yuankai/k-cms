{% extends 'MyexpCmsBundle:Admin:base.html.twig' %}
{% block title %}{{ 'website.manage'|trans }}{{ parent() }}{% endblock %}
{% block breadcrumd %}
    <div class="active section">{{ 'website.manage'|trans }}</div>
{% endblock %}
{% block content %}
    <table class="ui green table">
        <thead>
            <tr>
                <th>{{ 'website.id'|trans }}</th>
                <th>{{ 'website.title'|trans }}</th>
                <th>{{ 'website.http_url'|trans }}</th>
                <th>{{ 'website.https_url'|trans }}</th>
                <th>{{ 'website.icp_num'|trans }}</th>
                <th>{{ 'website.address'|trans }}</th>
                <th>{{ 'website.zip_code'|trans }}</th>
                <th>{{ 'website.email'|trans }}</th>
                <th>{{ 'website.tel'|trans }}</th>
                <th>{{ 'website.fax'|trans }}</th>
                <th>{{ 'common.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in pagination %}
            <tr class="{{ cycle(['odd', 'even'], loop.index) }}">
                <td><a href="{{ path('website_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.httpUrl }}</td>
                <td>{{ entity.httpsUrl }}</td>
                <td>{{ entity.icpNum }}</td>
                <td>{{ entity.address }}</td>
                <td>{{ entity.zipCode }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.tel }}</td>
                <td>{{ entity.fax }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{  entity.httpUrl }}" target="_blank">{{ 'common.show'|trans }}</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_website_edit', { 'id': entity.id }) }}">{{ 'common.edit'|trans }}</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <th colspan="11">
                    <a class="ui left small teal labeled icon button" href="{{ path('admin_website_new') }}">
                        <i class="home icon"></i> {{ 'website.new'|trans }}
                    </a>
                    {{ knp_pagination_render(pagination) }}
                </th>
            </tr>
        </tfoot>
    </table>
    {% endblock %}
