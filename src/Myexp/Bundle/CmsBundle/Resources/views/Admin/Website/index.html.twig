{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Website list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Httpurl</th>
                <th>Httpsurl</th>
                <th>Icpnum</th>
                <th>Address</th>
                <th>Zipcode</th>
                <th>Email</th>
                <th>Tel</th>
                <th>Fax</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('website_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.httpUrl }}</td>
                <td>{{ entity.httpsUrl }}</td>
                <td>{{ entity.icpNum }}</td>
                <td>{{ entity.address }}</td>
                <td>{{ entity.zipCode }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.tel }}</td>
                <td>{{ entity.fax }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('website_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('website_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('website_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
