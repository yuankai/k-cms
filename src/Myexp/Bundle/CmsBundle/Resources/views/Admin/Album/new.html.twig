{% extends 'MyexpCmsBundle:Admin:layout.html.twig' %}
{% block title %}{{ 'menu.new'|trans }}{% endblock %}
{% block breadcrumd %}
        <a href="{{ path('admin') }}">{{ 'nav.home'|trans }}</a> ><a href="{{path('album')}}">{{ 'album.manage'|trans }}</a> ><a href="{{app.request.getRequestUri()}}">{{ 'album.new'|trans }}</a></span>
{% endblock %}
{% block content %}
<form action="{{ path('album_create') }}" method="post">
    <div class="form">
        {% form_theme form 'MyexpCmsBundle:Form:tabs.html.twig' %}
        {{ form_widget(form) }}
            <div class="form-actions">
                <input class="btn btn-primary" type="submit" value="{{ 'common.submit'|trans }}" />
                <input class="btn btn-danger"  type="reset" value="{{ 'common.reset'|trans }}" />
            </div>
        </div>
    </form>
<form>
    <div class="form-actions">
        <input class="btn btn-primary" type="submit" value="{{ 'common.back_list'|trans }}"  onclick="saveToDraft(this, '{{ path('album') }}');" />
    </div>
    </form>
{% endblock %}
{% block javascripts %}
{{ parent() }}
    <script type="text/javascript">
        $(document).ready(function() {
            $('.tabs').tabs();
        });
        </script>
{% endblock %}