{# 富文本编辑器 #}
{% block editor_widget %}
{% spaceless %}
    <textarea {{ block('widget_attributes') }}>{{ value }}</textarea>
    <script type="text/javascript">
        {% autoescape true js %}
            var CKEDITOR_BASEPATH = '{{ asset('bundles/myexpeditor/ckeditor/') }}';
        {% endautoescape %}
    </script>
    <script type="text/javascript" src="{{ asset('bundles/myexpeditor/ckeditor/ckeditor.js') }}"></script>
    <script type="text/javascript">
        {% autoescape true js %}
            var instance = CKEDITOR.instances['{{ id }}'];
            if (instance) {
                instance.destroy(true);
            }
            CKEDITOR.replace("{{ id }}",{
              {% for key, val in options %}
                '{{ key }}': [{{ val | json_encode | raw }}],
              {% endfor %}
              filebrowserImageBrowseUrl: '{{ asset('bundles/myexpeditor/elfinder/elfinder.html') }}',
              skin: 'moono',
            });
        {% endautoescape %}
    </script>
{% endspaceless %}
{% endblock %}