{% extends 'MyexpCmsBundle:Admin:layout.html.twig' %}
{% block title %}{{ 'user.edit'|trans }}{% endblock %}
{% block breadcrumd %}
<a href="{{ path('admin') }}">{{ 'nav.home'|trans }}</a> ><a href="{{path('user')}}">{{ 'user.manage'|trans }}</a> ><a href="{{app.request.getRequestUri()}}">{{ 'user.edit'|trans }}</a></span>
{% endblock %}
{% block content -%}
<form action="{{ path('user_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    <div class="form">
        <input type="hidden" name="_method" value="PUT" />
       {{ form_widget(edit_form) }}
        <div class="form_actions">
            <input class="btn btn-primary" type="submit" value="{{ 'common.submit'|trans }}" />
            <input class="btn btn-danger" type="reset" value="{{ 'common.reset'|trans }}" />
        </div>
    </div>
</form>

<form action="{{ path('user_delete', { 'id': entity.id }) }}" method="post">
    <div class="form_actions">
        <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
        <button class="btn btn-warning" type="submit" onclick="return confirm('{{ 'common.delete_confirm'|trans }}');">{{ 'common.delete'|trans }}</button>
        <input class="btn btn-primary" type="submit" value="{{ 'common.back_list'|trans }}"  onclick="saveToDraft(this, '{{ path('user') }}');" />
    </div>
</form>

{% endblock %}
