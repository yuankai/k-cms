{% extends 'MyexpCmsBundle:Admin:layout.html.twig' %}
{% block title %}{{ 'user.show'|trans }}{% endblock %}
{% block breadcrumd %}
<a href="{{ path('admin') }}">{{ 'nav.home'|trans }}</a> ><a href="{{path('user')}}">{{ 'user.manage'|trans }}</a> ><a href="{{app.request.getRequestUri()}}">{{ 'user.show'|trans }}</a></span>
{% endblock %}
{% block content %}
<table class="record_properties">
    <tbody>
        <tr>
            <th>{{ 'user.id'|trans }}</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>{{ 'user.username'|trans }}</th>
            <td>{{ entity.username }}</td>
        </tr>
        <tr>
            <th>{{ 'user.email'|trans }}</th>
            <td>{{ entity.email }}</td>
        </tr>
        <tr>
            <th>{{ 'user.active'|trans }}</th>
            <td>{% if entity.isActive %}{{ 'common.yes'|trans }}{% else %}'common.no'|trans{% endif %}</td>
        </tr>
    </tbody>
</table>

<form action="{{ path('user_delete', { 'id': entity.id }) }}" method="post">
    <div class="form-actions">
        <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
        <button class="btn btn-warning" type="submit">{{ 'common.delete'|trans }}</button>
        <input class="btn btn-primary" type="submit" value="{{ 'common.back_list'|trans }}"  onclick="saveToDraft(this, '{{ path('user') }}');" />
        <input class="btn" type="submit" value="{{ 'common.edit'|trans }}"  onclick="saveToDraft(this, '{{ path('user_edit', { 'id': entity.id }) }}');" />
    </div>
</form>

{% endblock %}
