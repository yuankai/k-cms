{% extends 'base.html.twig' %}

{% block body %}
    <h1>ContentModel</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contentModel.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ contentModel.name }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ contentModel.title }}</td>
            </tr>
            <tr>
                <th>Entityname</th>
                <td>{{ contentModel.entityName }}</td>
            </tr>
            <tr>
                <th>Isclassable</th>
                <td>{% if contentModel.isClassable %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('contentmodel_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('contentmodel_edit', { 'id': contentModel.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
